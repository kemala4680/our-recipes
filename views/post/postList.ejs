<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Post List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include('../partials/_navPost') %>
    <h1 class="text-center m-5">Post List</h1>
    <div class="container">
      <form class="form-inline mb-5">
        <div class="row">
          <div class="col-sm-11">
            <input class="form-control mb-2" type="search" placeholder="Search" name="search">
          </div>
          <div class="col">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </div>
        </div>
      </form>
      <br>
      <% posts.forEach(el => { %>
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= el.imgURL %>" class="img-fluid rounded-start" alt="<%= el.title %>">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= el.title %></h5>
                <p class="card-text"><%= el.content %></p>
                <a href="/posts/detail/<%= el.id %>">detail</a>
                <p class="card-text"><small class="text-body-secondary"><%= el.created %></small></p>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>