<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Post Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include("../partials/_navPost") %>
    <h1 class="text-center m-5"><%= post.title %></h1>
    <div class="container">
      <div>
        <div class="text-center">
          <img src="<%= post.imgURL %>" class="img-thumbnail" alt="<%= post.title %>" style="width: 400px; height: 400px; object-fit: cover;">
          <p><%= post.created %></p>
        </div>
        <br>
      </div>
      <div>
        <p><%= post.content %></p>
      </div>
      <div class="text-center">
        <p>Tags</p>
        <% post.Tags.forEach(element => { %>
          <a href="#" class="btn btn-success"><%= element.name %></a>
        <% }) %>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>