<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <%- include("../partials/_navUser") %>
    <h1 class="text-center m-5">User Profile</h1>
    <div class="container">
      <div class="row">
        <div class="col">
          <img src="<%= user.UserDetail.profilePicture %>" class="img-thumbnail" alt="<%= user.UserDetail.username %>" style="width: 400px; height: 400px; border-radius: 200px; object-fit: cover;">
          <p><%= user.created %></p>
        </div>
        <div class="col">
          <br>
          <br>
          <br>
          <h5>username:</h5>
          <p><%= user.UserDetail.username %></p>
          <h5>Birth Date:</h5>
          <p><%= user.UserDetail.dateTemplate %></p>
          <h5>Reputation:</h5>
          <p><%= user.UserDetail.reputation %></p>
        </div>
      </div>
      <div class="text-center">
        <h5>Description:</h5>
        <p><%= user.UserDetail.description %></p>
      </div>
      <a href="/user/edit/<%= user.UserDetail.id %>" class="btn btn-info">Edit</a>
      <a href="/user/delete/<%= user.UserDetail.id %>" class="btn btn-danger">Delete</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>